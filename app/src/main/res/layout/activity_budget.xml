<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_budget"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nguyennam.financialmanagement.Budget">

    <RelativeLayout
        android:id="@+id/tabHeader"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/selector_layout_green">

        <LinearLayout
            android:id="@+id/lnAddBudget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/imgAddBudget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="-20dp"
                android:paddingRight="-20dp"
                android:src="@drawable/add"/>
        </LinearLayout>

        <TextView
            android:id="@+id/lbBudget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/lnAddBudget"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:text="@string/Budget"
            android:layout_marginLeft="40dp"
            android:gravity="center"
            style="@style/TextViewStyleBold"/>
    </RelativeLayout>
</RelativeLayout>
